<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <servlet>
    <servlet-name>helloWorld</servlet-name>
    <servlet-class>com.wizsec.appengine.fafa.HelloWorldServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>helloWorld</servlet-name>
	<url-pattern>/api/helloworld</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>devicehandler</servlet-name>
    <servlet-class>com.wizsec.appengine.fafa.DeviceHandler</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>devicehandler</servlet-name>
	<url-pattern>/api/registerdevice</url-pattern>
	<url-pattern>/api/unregisterdevice</url-pattern>
	<url-pattern>/api/listdevices</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>sendmessage</servlet-name>
    <servlet-class>com.wizsec.appengine.fafa.SendMessageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>sendmessage</servlet-name>
	<url-pattern>/api/sendmessage</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
